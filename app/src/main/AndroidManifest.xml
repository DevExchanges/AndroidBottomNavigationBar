<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.devexchanges.bottomnavigation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BehaviorActivity"
            android:label="Show/Hide Bottom Navigation Bar" />

        <activity
            android:name=".SimpleActivity"
            android:label="Simple Bottom Navigation Bar" />

        <activity
            android:name=".ChangeBackgroundActivity"
            android:label="Change Background Bottom Navigation Bar" />
    </application>

</manifest>